<style>
 .tb{
    width: 100px;
 }
 div.a {
  /* white-space: nowrap; 
  width: 200px; 
  overflow: hidden;
  text-overflow: ellipsis;
   */
   width: 100px;
   overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        line-height: 18px; 
        max-height: 35px;     
          
        /* The number of lines to be displayed */
        -webkit-line-clamp: 4; 
        -webkit-box-orient: vertical;
  
}
div.a:hover {
overflow: visible;  
}
</style>

<div class="container-fluid  pt-4 px-4" >
    <div class="row g-4">
        <div class="  col-xl-2">
        </div>
        <div class="col-sm-12   col-xl-6">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Categories</h6>
                <a href="/admin/addPro" class="btn btn-primary mb-4">Add products</a>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Title</th>
                            <th scope="col">Brand</th>
                            <th scope="col">price</th>
                            <th scope="col">stock</th>
                            <th scope="col" >image</th>
                            <th scope="col tb">Description</th>
                            <th scope="col">Discount</th>
                            <th scope="col">Size</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                     
                           
                                
   
                               
                                    <% pros.forEach((element,i)=>{ %>
                                         
                                        <tr>
                                    <th scope="row"> <%= i+1 %>  </th>
                                <td><%= element.title %> </td>
                                <td><%= element.brand %> </td>
                                <td><%= element.price %> </td>
                                <td><%= element.stock %> </td>
                                <td>
                                <% for(let z=0;z<element.image.length;z++){ %>
                                
                                        <img src="<%= element.image[z] %> " alt="" width="100px" height="auto">
                                    

                               <% } %>
                            </td>
                               
                                <td class="tb"><div class="a"><%= element.description %></div></td>
                                <td><%= element.discount %> </td>
                                <td><%= element.size %> </td>
                                <td>
                                    <a href="/admin/editPro?id=<%= element._id %>" class="btn btn-success">Edit</a>   
                                </td>
                                <td><a href="/admin/deletePro/<%= element._id %>" onclick="return confirm('Are u sure?')" class="btn btn-danger">Delete</a></td>
                            </tr>
                           
                                   <% }) %> 
                                
                           
                               
                           
                            
                        
                    </tbody>
                </table>
            </div>
        </div>
        </div>
        </div>